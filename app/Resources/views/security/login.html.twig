{% extends 'base.html.twig' %}

{% block body %}
    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                        <img class="align-content" src="{{ asset('car.png') }}" alt="" style="width: 140px;">
                </div>
                <div class="login-form">
                    <form action="{{ path('login') }}" method="post">
                        <div class="form-group">
                            <label>Login</label>
                            <input type="text" class="form-control" placeholder="login" name="_username" value="{{ last_username }}">
                        </div>
                        <div class="form-group">
                            <label>Mot de passe</label>
                            <input type="text" class="form-control" placeholder="Mot de passe" name="_password">
                        </div>
                        <div class="group">
                            {% if error %}
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">Valider</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}